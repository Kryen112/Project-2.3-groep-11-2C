<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="groep11.controllers.Boterkaaseieren" >

    <BorderPane fx:id="centerBox">
        <left>
            <VBox>
                <Text fx:id="title" text="Boter, Kaas en Eieren"/>
                <HBox>
                    <Button text="Terug" onAction="#goBackHome"/>
                    <!--    TODO speler kan andere speler verzoek sturen via server d.m.v. gebruikersnaam    -->
                    <Button text="Nodig speler uit" onAction="#uitlegTicTacToe" />
                    <Button text="Nodig speler uit" onAction="#playGameWithPlayer" translateX="400"/>
                </HBox>
                <HBox>
                    <Label fx:id="info" text="Kies een speloptie"/>
                    <RadioButton fx:id="localvsai" text="Lokaal tegen Computer" translateX="20"/>
                    <RadioButton fx:id="localvslocal" text="Lokaal met 2 Spelers" translateX="30"/>
                    <RadioButton fx:id="onlinevsai" text="Online tegen Computer" translateX="40"/>
                    <RadioButton fx:id="onlinevsrandom" text="Online tegen Willekeurige speler" translateX="50"/>
                    <Button text="Start nieuw spel" onAction="#playNewGame"/>
                </HBox>
            </VBox>
        </left>

        <center>
            <VBox fx:id="turnBox">

            </VBox>
            <GridPane fx:id="pane" minWidth="250" minHeight="250">

            </GridPane>
        </center>
    </BorderPane>

    <stylesheets>
        <!-- note: The @ symbol before the name of the style sheet in the URL
            indicates that the style sheet is in the same directory as the FXML file. -->
        <URL value="@/groep11/styling/main.css" />
    </stylesheets>
</AnchorPane>
